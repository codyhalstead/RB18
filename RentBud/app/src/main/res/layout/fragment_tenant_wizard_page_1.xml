<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView style="@style/WizardTitle"
                android:id="@+id/tenantWizardPageOneHeader"
                android:text="New Tenant Info"
                />

            <TextView
                android:id="@+id/tenantWizardFirstNameLabelTV"
                style="@style/WizardFormLabel"
                android:text="*First Name" />

            <EditText
                android:id="@+id/tenantWizardFirstNameET"
                android:layout_width="match_parent"
                style="@style/FormText"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_edit"
                android:gravity="center_vertical"
                android:text=""
                android:hint=""
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:saveEnabled="false"
                android:inputType="textCapSentences"
                />

            <TextView
                android:id="@+id/tenantWizardLasstNameLabelTV"
                style="@style/WizardFormLabel"
                android:text="*Last Name" />

            <EditText
                android:id="@+id/tenantWizardLastNameET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                style="@style/FormText"
                android:background="@drawable/rect_edit"
                android:gravity="center_vertical"
                android:text=""
                android:hint=""
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:saveEnabled="false"
                android:inputType="textCapSentences"
                />

            <TextView
                android:id="@+id/tenantWizardPhoneLabelTV"
                style="@style/WizardFormLabel"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/tenantWizardPhoneET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                style="@style/FormText"
                android:background="@drawable/rect_edit"
                android:gravity="center_vertical"
                android:text=""
                android:hint=""
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:saveEnabled="false"
                android:inputType="phone"
                />

            <TextView
                android:id="@+id/tenantWizardEmailLabelTV"
                style="@style/WizardFormLabel"
                android:text="E-Mail" />

            <EditText
                android:id="@+id/tenantWizardEmailET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                style="@style/FormText"
                android:background="@drawable/rect_edit"
                android:gravity="center_vertical"
                android:text=""
                android:hint=""
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:saveEnabled="false"
                android:inputType="textEmailAddress"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>