<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rentbud.activities.MainActivity">

    <!--Profile picture and design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add 100 tenants"
            android:layout_below="@+id/email"
            android:id="@+id/add100TenantsBtn"
            android:onClick="add100Tenants"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add 100 apartments"
            android:layout_below="@+id/add100TenantsBtn"
            android:id="@+id/add100ApartmentsBtn"
            android:onClick="add100Apartments"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainExtraBtn"
            android:layout_below="@+id/add100ApartmentsBtn"
            android:text="lease tab sample"
            android:onClick="leaseSample"
            />

    </LinearLayout>
</ScrollView>
