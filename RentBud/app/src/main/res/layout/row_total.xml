<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/typeRowLL"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rent"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:id="@+id/totalsRowTypeLabelTV"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$1,234,567"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:id="@+id/totalsRowTotalTV"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_gravity="right"
                android:id="@+id/totalsRowOccurrenceNumberTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" occurrences"
                android:layout_gravity="right"
                android:id="@+id/totalsRowOccurrencesLabelTV"
                />

        </LinearLayout>


    </LinearLayout>

    <!--Border -->
    <View
        android:id="@+id/tenantRowBarBorder"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/caldroid_black"
        android:layout_below="@+id/typeRowLL"
        />

</RelativeLayout>