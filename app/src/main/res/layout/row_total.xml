<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/typeRowLL"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rent"
            style="@style/RowLargeText"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/totalsRowTypeLabelTV"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$1,234,567"
            android:layout_gravity="right"
            android:ellipsize="end"
            style="@style/RowLargeText"
            android:maxLines="1"
            android:id="@+id/totalsRowTotalTV"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                style="@style/RowText"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/totalsRowOccurrenceNumberTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/space_occurrences"
                android:layout_gravity="right"
                style="@style/RowText"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/totalsRowOccurrencesLabelTV"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>