    </style>

    <style name="AppTheme_turquoise" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/turquoise_colorPrimary</item>
        <item name="colorPrimaryDark">@color/turquoise_colorPrimaryDark</item>
        <item name="colorAccent">@color/turquoise_colorAccent</item>
