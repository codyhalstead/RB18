<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/purple_colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:editTextColor">#000000</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="textAppearanceFinish">@style/TextAppearanceFinish</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RowBorder" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/rowBorder</item>
    </style>

    <style name="ListView" >
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">@color/rowBorder</item>
    </style>

    <style name="MainButtonStyle" >
        <item name="android:background">@drawable/rect_edit</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="ContactButtonStyle" >
        <item name="android:background">@drawable/rect_edit</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>

    <style name="MainSpinnerStyle" >
        <item name="android:background">@drawable/rect_edit</item>
    </style>

    <!-- View Styles -->
    <style name="ViewInformationRowStyle" >
        <item name="android:padding">10dp</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="ViewInformationRowLeftTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">left</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewInformationRowRightTextStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/greybackground</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewInformationRowHeaderTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Row Styles -->
    <style name="RowText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="RowLargeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="LargeEmptyListText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="WizardHintText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SpinnerLabelStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAppearanceFinish">@style/TextAppearanceFinish</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="FormLargeLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewMainLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewSubLabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WizardTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme_red" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_colorPrimary</item>
        <item name="colorPrimaryDark">@color/red_colorPrimaryDark</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme_gold" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gold_colorPrimary</item>
        <item name="colorPrimaryDark">@color/gold_colorPrimaryDark</item>
        <item name="colorAccent">@color/gold_colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme_black" parent="Theme.AppCompat.Light.NoActionBar">
