    <style name="AppTheme_orange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange_colorPrimaryDark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

</resources>
